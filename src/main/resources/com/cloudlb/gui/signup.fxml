<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.cloudlb.gui.SignupController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Sign Up" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <TextField fx:id="usernameField" promptText="Choose a username" />
    <PasswordField fx:id="passwordField" promptText="Choose a password" />
    <Button text="Sign Up" onAction="#handleSignup" />
    <Button text="Back to Login" onAction="#goToLogin" />
</VBox>

